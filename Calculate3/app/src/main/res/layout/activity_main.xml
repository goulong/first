<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <EditText android:id="@+id/input"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:cursorVisible="false"
              android:gravity="right"
              android:text="0" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <Button android:id="@+id/bksp"
                android:text="BACK"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/c"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CLEAR"/>
    </TableRow>


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button android:id="@+id/sqrt"
                android:text="√"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/square"
                android:text="^"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/left"
                android:text="("
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/right"
                android:text=")"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button android:id="@+id/seven"
                android:text="7"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/eight"
                android:text="8"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/nine"
                android:text="9"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/divide"
                android:text="÷"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

    </TableRow>


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button android:id="@+id/four"
                android:text="4"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/five"
                android:text="5"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/six"
                android:text="6"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/mul"
                android:text="×"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button android:id="@+id/one"
                android:text="1"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/two"
                android:text="2"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/three"
                android:text="3"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        <Button android:id="@+id/sub"
                android:text="-"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

    </TableRow>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="57sp"
        >
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button android:id="@+id/zero"
                    android:text="0"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

            <Button android:id="@+id/dot"
                    android:text="."
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

            <Button android:id="@+id/equal"
                    android:text="="
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

            <Button android:id="@+id/add"
                    android:text="+"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView android:id="@+id/T"
                  android:layout_width="60sp"
                  android:layout_height="wrap_content"
                  android:text="" />
    </TableRow>

</LinearLayout>